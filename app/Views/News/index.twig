{% include 'Partials/navbar.twig' %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        header {
            background-color: #4CAF50;
            color: white;
            text-align: center;
            padding: 10px 0;
        }

        .container {
            flex-grow: 1;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .article-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-evenly;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .article-item {
            box-sizing: border-box;
            background-color: #fff;
            width: calc(33.33% - 20px);
            margin: 10px;
            text-align: center;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            transition: transform 0.2s;
        }

        .article-item:hover {
            transform: translateY(-5px);
        }

        .article-item a {
            text-decoration: none;
            color: #333;
            display: block;
            padding: 10px;
        }

        .article-item a:hover {
            background-color: #f5f5f5;
        }

        .article-item img {
            max-width: 100%;
            height: 150px;
            object-fit: cover;
            border-radius: 5px 5px 0 0;
        }

        .article-item h1 {
            font-size: 18px;
            margin: 10px 0;
        }

        .article-item p {
            font-size: 14px;
            margin: 5px 0;
            padding: 0 10px;
        }
    </style>
</head>
<body>
<header>
    <a href="/" style="text-decoration: none; color: white;">
        <h2>Top Headlines</h2>
    </a>
</header>

<div class="container">
    <div class="article-container">
        {% for article in articles %}
            <div class="article-item">
                <a href="{{ article.getUrl() }}" target="_blank">
                    <img src="{{ article.imageUrl() }}" alt="{{ article.getTitle() }}">
                    <h1>{{ article.getTitle() }}</h1>
                </a>
                <p>{{ article.getDescription() }}</p>
                <p>{{ article.getPublicationDate() }}</p>
            </div>
        {% endfor %}
    </div>
</div>

</body>
</html>
